# Урок №2
# Тема: Списки

bicycles = ['trek', 'cannondale', 'redline', 'specialized']
message = f"My first bicycle was a {bicycles[0].title()}."

print(message)

print(bicycles)
print(bicycles[0])
print(bicycles[1])
print(bicycles[3])
print(bicycles[-1])

# Изменение элементов в списке

print('\n.')

motorcycles = ['honda', 'yamaha', 'suzuki']
print(motorcycles)

motorcycles[0] = 'ducati'
print(motorcycles)

# Присоединение элементов в конец списка - append()

print('\n.')

motorcycles = ['honda', 'yamaha', 'suzuki']
print(motorcycles)
motorcycles.append('ducati')
print(motorcycles)

motorcycles = []
motorcycles.append('honda')
motorcycles.append('yamaha')
motorcycles.append('suzuki')

print(motorcycles)

# Вставка элементов в список - inster()

print('\n.')

motorcycles = ['honda', 'yamaha', 'suzuki']

motorcycles.insert(0, 'ducati')
print(motorcycles)

# Удаление элемента с использованием команды del

print('\n.')

motorcycles = ['honda', 'yamaha', 'suzuki']
print(motorcycles)

del motorcycles[0]
print(motorcycles)

del motorcycles[1]
print(motorcycles)

# Удаление элемента с использованием pop()

print('\n.')

motorcycles = ['honda', 'yamaha', 'suzuki']
print(motorcycles)

popped_motorcycle = motorcycles.pop()
print(motorcycles)
print(popped_motorcycle)

motorcycles = ['honda', 'yamaha', 'suzuki']

last_owned = motorcycles.pop()
print(f"The last motorcycle I owned was a {last_owned.title()}.")

# Извлечение элементов из произвольной позиции списка

print('\n.')

motorcycles = ['honda', 'yamaha', 'suzuki']

first_owned = motorcycles.pop(0)
print(f"The first motorcycle I owned was a {first_owned.title()}.")

# Удаление элементов по значению - remove()

print('\n.')

motorcycles = ['honda', 'yamaha', 'suzuki', 'ducati']
print(motorcycles)

motorcycles.remove('ducati')
print(motorcycles)

motorcycles = ['honda', 'yamaha', 'suzuki', 'ducati']
print(motorcycles)

too_expensove = 'ducati'
motorcycles.remove(too_expensove)
print(motorcycles)
print(f"\nA {too_expensove.title()} is too expensive for me.")

# Постоянная сортировка списка - sort()

print('\n.')

cars = ['bmw', 'audi', 'toyota', 'subaru']
cars.sort()
print(cars)

cars = ['bmw', 'audi', 'toyota', 'subaru']
cars.sort(reverse=True)
print(cars)

# Определение длины списка

print('\n.')

cars = ['bmw', 'audi', 'toyota', 'subaru']
print(len(cars))
