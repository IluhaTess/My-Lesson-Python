# Урок №4
# Тема: Команды if

cars = ['audi', 'bmw', 'subaru', 'toyota']

for car in cars:
    if car == 'bmw':
        print(car.upper())
    else:
        print(car.title())

print('\n.')
        
banned_users = ['andrew', 'carolina', 'david']
user = 'marie'

if user not in banned_users:
    print(f'{user.title()}, you can post a response if you wish.')
    
# if условие:
    # действие
    
print('\n.')
    
age = 19
if age >= 18:
    print('You are old enough to vote!')
    print('Have you registered to vote yet?')
    
# Команды if-else
  
print('\n.')  
  
age = 17
if age >= 18:
    print('You are old enough to vote!')
    print('Have you registered to vote yet?')
else:
    print('Sorry, you are too young to vote.')
    print('Please register to vote as soon as you turn 18!')
    
# Цепочки if-elif-else

print('\n.')

age = 12

if age < 4:
    price = 0
elif age < 18:
    price = 25
else:
    price = 40

print(f'Your admission cost in ${price}.')

# Использование команд if со списками
# Проверка специальных значений

print('\n.')

requsted_toppings = ['mushrooms', 'green peppers', 'extra cheese']

for requsted_topping in requsted_toppings:
    print(f'Adding {requsted_topping}.')
    
print('\nFinished making your pizza!')

# Множественные списки

print('\n.')

available_toppings = ['mushrooms', 'olives', 'green peppers', 
                      'pepperoni', 'pineapple', 'extra cheese']

requsted_toppings = ['mushrooms', 'french fries', 'extra cheese']

for requsted_topping in requsted_toppings:
    if requsted_topping in requsted_toppings:
        print(f'Adding {requsted_topping}.')
    else:
        print(f'Sorry, we don`t have {requsted_topping}.')
        
print('\nFinished making your pizza!')
